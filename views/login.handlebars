<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title text-center">Login</h2>
    <form class="form login-form">
      <div class="form-group d-flex justify-content-end my-2 ms-4">
        <label class="px-2" for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group d-flex justify-content-end my-2">
        <label class="px-2" for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group d-flex justify-content-end">
        <button class="btn btn-primary mb-4" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="login-card" width="250px">
    <h2 class="page-title text-center">Signup</h2>
    <form class="form signup-form">
      <div class="form-group d-flex justify-content-end my-2">
        <label class="px-2" for="username-signup">Username: </label>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group d-flex justify-content-end my-2 ms-4">
        <label class="px-2" for="email-signup">Email: </label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group d-flex justify-content-end my-2">
        <label class="px-2" for="password-signup">Password: </label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group d-flex justify-content-end">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>