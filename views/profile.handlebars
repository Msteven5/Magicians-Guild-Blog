<div class="row Post-card" style="width: 500px">
  <h2 class="page-title text-center mb-5">Welcome To Your Profile!</h2>
  </article>
  <div class="d-flex justify-content-center align-items-center">
    <div class="card-deck">
      {{#each user.posts as |post| }}
      <div class="card mb-4 post d-flex align-items-center" style="width: 700px; height: 125px;">
        <div class="card-body text-center text-white">
          <h4 class="card-title">{{title}}</h4>
          <p class="card-text fs-5">{{content}}</p>
      </div>
      <div class="text-light w-25 d-flex justify-content-between">
          <a href="#" class="mb-3">Edit</a>
          <a href="#" span class="mb-3">Delete</a>
      </div>
    </div>
    {{/each}}
  </div>
</div>