<div class="row Post-card" style="width: 500px">
  <h2 class="page-title text-center">Forum of Secrets</h2>
  <form class="form post-form" width="500px">
    <div class="mb-3">
      <label for="post-title" class="form-label mt-3">Title</label>
      <input class="form-control" id="post-title" placeholder="Blog Title Here">
    </div>
    <div class="mb-3">
      <label for="post-content" class="form-label">What Do You Wish To Reveal?</label>
      <textarea class="form-control" id="post-content" rows="3"></textarea>
    </div>
    <div class="form-group d-flex justify-content-center">
      <button class="btn btn-primary mb-2" type="submit" id="submitPost">Abra Kadabra</button>
    </div>
  </form>
</div>

<script src="./js/post.js"></script>
</article>
<div class="d-flex justify-content-center align-items-center">
  <div class="card-deck">
    {{#each posts as |post| }}
    <div class="card mb-3 post d-flex align-items-center" style="width: 700px; height: 100px;">
      <div class="card-body text-center text-white">
        <h4 class="card-title">{{title}}</h4>
        <h6 class="card-subtitle">Exposed By: {{post.user.name}}</h6>
        <p class="card-text fs-5">{{content}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>