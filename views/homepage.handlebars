<div class="row Post-card" style="width: 500px">
  <h2 class="page-title text-center mb-5">Forum of Secrets</h2>
  </article>
  <div class="d-flex justify-content-center align-items-center">
    <div class="card-deck">
      {{#each posts as |post| }}
      <div class="card mb-4 post d-flex align-items-center" style="width: 700px; height: 150px;">
        <div class="card-body text-center text-white">
          <h4 class="card-title">{{title}}</h4>
          <h6 class="card-subtitle">Exposed By: {{post.user.name}}</h6>
          <p class="card-text fs-5">{{content}}</p>
          <form class="comment-form">
            <div>
              <div class="d-flex justify-content-end my-2">
                <label class="px-2" for="username-signup">Comment Here: </label>
                <input class="form-input comment-input" maxlength="65" style="height: 25px;" type="text" />
                <input class="post_id" type="hidden" value={{id}}>
                <button class="btn btn-primary ms-2 mb-2 d-flex justify-content-center align-items-center"
                  style="height: 25px;" type="submit" id="submitComment">Submit</button>
                <div class="row ms-2">
                  <a href="/comments/{{id}}">{{{comments.length}}} Comment(s)</a>
                </div>
              </div>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>


<script src="./js/comment.js"></script>